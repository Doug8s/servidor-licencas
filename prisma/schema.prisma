// Conteúdo para o arquivo: servidor-licencas/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./licenses.db"
}

model License {
  id          Int      @id @default(autoincrement())
  key         String   @unique // A chave que você vai dar ao cliente (ex: MEUAPP-1234-ABCD)
  machineId   String?  @unique // A "impressão digital" do PC do cliente, salvo após a ativação
  isActivated Boolean  @default(false)
  createdAt   DateTime @default(now())
}